{
  "name": "nodejs-rest-api-template",
  "version": "0.0.1",
  "description": "Typescript REST API starter pack for typescript/node.js development.",
  "main": "index.js",
  "repository": "https://github.com/qest-cz/nodejs-rest-api-template.git",
  "author": "Cyril Urban <cyril.urban@qest.cz>",
  "contributors": [
    "Radim Štěpaník <radim.stepanik@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:check": "tsc --noemit",
    "dev": "cross-env NODE_ENV=dev ts-node-dev --transpile-only --no-notify -r dotenv/config src/index.ts dotenv_config_path=./config/.env | pino-pretty",
    "eslint:fix": "eslint . --fix --ext .ts",
    "eslint:check": "eslint . --quiet --ext  .ts",
    "prettier:run": "prettier --write '**/*.ts'",
    "prettier:check": "prettier -l '**/*.ts'",
    "code:fix": "concurrently \"yarn eslint:fix\" \"yarn prettier:run\"",
    "code:check": "concurrently \"yarn prettier:check\" \"yarn eslint:check\" \"yarn tsc:check\"",
    "test": "DOTENV_CONFIG_PATH=./config/.env.test jest",
    "test:watch": "yarn test --watch",
    "test:update": "yarn test --updateSnapshot",
    "test:cover": "yarn test --coverage",
    "start": "node -r dotenv/config dist/src/index.js dotenv_config_path=./config/.env",
    "clean": "concurrently 'rm -rf dist' 'rm -rf coverage'"
  },
  "dependencies": {
    "@qest/error-utils": "^1.0.1",
    "@qest/express-utils": "^2.0.0",
    "@qest/swagger-utils": "^1.0.7",
    "cosmas": "^3.0.3",
    "dotenv": "^8.2.0",
    "fp-ts": "^2.9.5",
    "io-ts": "^2.2.16",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.21",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
